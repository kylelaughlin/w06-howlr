<div class="container">
  <div class="wolf-list-container">
    <!-- Top Howlr button -->
    <div class="howlr-header text-center">
      <h1 class="howlr-header-text">Howlr</h1>
    </div>

    <% if @wolf.errors.any? %>
      <div class="error-box">
        <% @wolf.errors.full_messages.each do |m| %>
        <p class="error-message"><%=m%></p>
        <% end %>
      </div>
    <% end %>

    <form class="new-wolf-form" action="/wolves" method="post">
      <input class="form-input" type="text" name="name" placeholder="Your name?">
      <input class="form-input" type="text" name="image" placeholder="Profile Picture URL?">
      <input class="form-input" type="text" name="description" placeholder="Short bio?">
      <input class="wolf-submit-button" type="submit" value="Join The Pack">
    </form>
    <a href="/wolves" class="back-to-wolves-button">Back</a>
  </div>
</div>
