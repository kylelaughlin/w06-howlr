<div class="container">

  <div class="wolf-listing">

    <div class="large-wolf-wrapper">
      <h3 class="text-center">Your Pack:</h3>
      <% @wolves.each do |w| %>
        <div class="wolf-container clearfix">
          <div class="wolf-image-wrapper">
            <img class="wolf-image" src="<%=w.image%>">
          </div>
          <div class="wolf-bio-container">
            <div class="wolf-name-wrapper clearfix">
              <p class="wolf-name"><%=w.name%></p>
              <p class="wolf-howls-count"><%=w.howls.count%> howls</p>
            </div>
            <div class="wolf-description-wrapper">
              <p class="wolf-description"><%=w.description%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a class="nav-button large-pack-button" href="/wolves">SEE THE PACK</a>
  </div>

  <div class="list-container">
    <!-- Top Howlr button -->
    <div class="howlr-header text-center">
      <h1 class="howlr-header-text">Howlr</h1>
    </div>

    <!-- Large screen howl form -->
    <div class="large-screen-howl-form">
      <form class="new-form" action="/howls" method="post">
        <input class="form-input hidden-form clickable" type="text" name="content" placeholder="What are you howling about?">
        <div class="howl-hidden-form">
          <input class="form-input hidden-form" type="text" name="image" placeholder="Wanna share a picture? (optional)">
          <select class="wolf-select" name="wolf_id">
            <option value="" disabled selected hidden>Please Choose a Wolf</option>
            <% @wolves.each do |w| %>
              <option value="<%=w.id%>"><%=w.name%></option>
            <% end %>
          </select>
          <input class="wolf-submit-button" type="submit" value="Howl">
        </div>
      </form>
    </div>

    <!--Nav buttons -->
    <div class="howl-nav-wrapper clearfix">
      <a class="nav-button new-howl" href="/howls/new">NEED TO HOWL</a>
      <a class="nav-button see-pack" href="/wolves">SEE THE PACK</a>
    </div>

    <div class="text-center">
      <h3>Here are the last five howls from your pack:</h3>
    </div>

    <!-- Howls -->
    <div class="howls-list-container">
      <% @howls.each do |h| %>
        <div class="howl-container clearfix">
          <div class="howl-header clearfix">
            <div class="howl-name-wrapper">
              <h3 class="howl-name"><%=h.wolf.name%></h3>
            </div>
            <div class="howl-wolf-image-wrapper">
              <img class="wolf-image" src="<%=h.wolf.image%>">
            </div>
            <p class="howl-day"><%=h.days_since_howl%></p>
          </div>
          <% if !h.image.nil? %>
            <img src="<%=h.image%>" class="howl-image">
          <% end %>
          <div class="howl-content-wrapper">
            <p class="howl-content"><%=h.content%></p>
          </div>
          <a class="howl-link" href="/howls/<%=h.id%>/replies">Howl Back (<%=h.replies.count%>)</a>
          <p id="like-link" value="<%=h.id%>" class="howl-link make-inline">Like (<span id="likes"><%=h.likes%></span>)</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
